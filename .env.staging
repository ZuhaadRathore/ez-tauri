# ------------------------------------------------------------------------------
# Staging Environment Variables
#
# This file contains staging environment variables for testing production-like
# configurations before deploying to production.
# ------------------------------------------------------------------------------

# Database Configuration
DATABASE_URL=postgresql://staging_user:CHANGE_ME@your-staging-db-host:5432/ez_tauri_staging

# Redis Configuration
REDIS_URL=redis://your-staging-redis-host:6379

# Application Configuration
APP_ENV=staging

# Logging Configuration - Staging Settings (similar to prod but more verbose)
LOG_LEVEL=info
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_FORMAT=json
LOG_CONSOLE_COLORS=false
LOG_FILE_ENABLED=true
LOG_FILE_PREFIX=ez-tauri-staging
LOG_JSON=true
LOG_DIRECTORY=logs
LOG_ROTATION=daily
LOG_MAX_FILES=14
LOG_MAX_SIZE_MB=100